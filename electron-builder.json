{
  "appId": "pos.cevichon.app",
  "productName": "PosCevichon",
  "icon": "./desktopIcon.png",
  "files": [
    "dist-electron/**/*",
    "dist-react/**/*"
  ],
  "directories": {
    "output": "build/windows"
  },
  "win": {
    "target": [
      "portable",
      "msi"
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "mac": {
    "target": {
      "target": "dmg"
    }
  },
  "linux": {
    "target": {
      "target": "AppImage"
    }
  }
}